@model graph_tutorial.ViewModels.CreateNewItems

@{
  ViewBag.Title = "SetListDetail";
}

<h2 style="text-align: center; margin-top: 50px; color:darkmagenta">Create New Meeting</h2>


@using (Html.BeginForm(FormMethod.Post))
{
  @*@Html.AntiForgeryToken()*@
  <table class="table table-hover table-success bg-success" style="margin-top: 50px">

    <tr>
      <td>Title</td>
      <td>

        @Html.TextBoxFor(m => m.Title)
        @Html.ValidationMessageFor(m => m.Title)
      </td>
    </tr>
    <tr>
      <td>Time</td>
      <td>
        @Html.TextBoxFor(m => m.Time, new { @Value = DateTime.Now, id = "datepicker" })
        @Html.ValidationMessageFor(m => m.Time)
      </td>
    </tr>
    <tr>
      <td>Description</td>
      <td>
        @Html.TextAreaFor(m => m.Description)
        @Html.ValidationMessageFor(m => m.Description)
      </td>
    </tr>
    <tr>
      <td>Address</td>
      <td>
        @Html.TextBoxFor(p => p.Address)
        @Html.ValidationMessageFor(p => p.Address)
      </td>
    </tr>
  </table>

  <input class="btn btn-success btn-lg" style="margin: auto; display: block; margin-top: 45px " type="submit" value=" Save  " />
}
@section Scripts{
  @Scripts.Render("~/bundles/jqueryval")
}

